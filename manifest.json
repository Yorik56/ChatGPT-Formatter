{
  "manifest_version": 2,
  "name": "ChatGPT Formatter",
  "version": "1.0",
  "description": "Adds formatting options for ChatGPT responses",
  "icons": {
    "48": "assets/icons/icon-48.svg",
    "96": "assets/icons/icon-96.svg"
  },
  "permissions": [
    "activeTab"
  ],
  "browser_action": {
    "default_icon": {
      "48": "assets/icons/icon-48.svg"
    },
    "default_popup": "popup.html",
    "default_title": "ChatGPT Formatter"
  },
  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/*"],
      "js": ["dist/content-script.js"],
      "css": ["dist/css/styles.css"]
    }
  ]
}
